@page "/analytics"
@using AIBettingBlazorDashboard.Components.Grafana
@using MudBlazor

<PageTitle>Analytics</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Analytics & Performance</MudText>

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="System Overview" Icon="@Icons.Material.Filled.Dashboard">
        <GrafanaEmbed DashboardUid="aibetting-overview"
                     From="now-6h"
                     To="now"
                     Height="800" />
    </MudTabPanel>

    <MudTabPanel Text="Explorer" Icon="@Icons.Material.Filled.Sensors">
        <GrafanaEmbed DashboardUid="aibetting-explorer"
                     From="now-6h"
                     To="now"
                     Height="800" />
    </MudTabPanel>

    <MudTabPanel Text="Analyst" Icon="@Icons.Material.Filled.Analytics">
        <GrafanaEmbed DashboardUid="aibetting-analyst"
                     From="now-6h"
                     To="now"
                     Height="800" />
    </MudTabPanel>

    <MudTabPanel Text="Executor" Icon="@Icons.Material.Filled.AccountBalance">
        <GrafanaEmbed DashboardUid="aibetting-executor"
                     From="now-6h"
                     To="now"
                     Height="800" />
    </MudTabPanel>
</MudTabs>
