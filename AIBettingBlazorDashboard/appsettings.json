{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Monitoring": {
    "PrometheusUrl": "http://localhost:9090",
    "StreamIntervalSeconds": 5,
    "GrafanaBaseUrl": "http://localhost:3000",
    "ExplorerMetricsUrl": "http://localhost:5001/metrics",
    "AnalystMetricsUrl": "http://localhost:5002/metrics",
    "DefaultDashboard": "explorer",
    "AutoRefreshInterval": "5s",
    "DefaultTimeRange": "15m",
    "Dashboards": {
      "overview": {
        "uid": "aibetting-overview",
        "name": "System Overview",
        "description": "Complete system metrics"
      },
      "explorer": {
        "uid": "aibetting-explorer",
        "name": "Explorer Metrics",
        "description": "Real-time metrics from AIBettingExplorer"
      },
      "analyst": {
        "uid": "aibetting-analyst",
        "name": "Analyst Performance",
        "description": "Real-time analysis metrics from AIBettingAnalyst"
      },
      "executor": {
        "uid": "aibetting-executor",
        "name": "Executor Metrics",
        "description": "Order execution and risk management"
      }
    }
  },
  "Services": {
    "ExecutorApiUrl": "http://localhost:5004",
    "AnalystApiUrl": "http://localhost:5002",
    "ExplorerApiUrl": "http://localhost:5001"
  },
  "Redis": {
    "ConnectionString": "localhost:16379"
  }
}
