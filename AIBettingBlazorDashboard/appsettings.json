{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Monitoring": {
    "GrafanaBaseUrl": "http://localhost:3000",
    "PrometheusBaseUrl": "http://localhost:9090",
    "ExplorerMetricsUrl": "http://localhost:5001/metrics",
    "DefaultDashboard": "explorer",
    "AutoRefreshInterval": "5s",
    "DefaultTimeRange": "15m",
    "Dashboards": {
      "explorer": {
        "uid": "aibetting-explorer",
        "name": "Explorer Metrics",
        "description": "Real-time metrics from AIBettingExplorer"
      },
      "infrastructure": {
        "uid": "infrastructure-overview",
        "name": "Infrastructure Overview",
        "description": "Redis and PostgreSQL metrics"
      },
      "redis": {
        "uid": "redis-metrics",
        "name": "Redis Metrics",
        "description": "Detailed Redis performance"
      },
      "postgres": {
        "uid": "postgres-metrics",
        "name": "PostgreSQL Metrics",
        "description": "Database performance metrics"
      }
    }
  }
}
