# AIBetting - EditorConfig
# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
indent_style = space

# YAML files
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# JSON files
[*.json]
indent_size = 2
indent_style = space

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2
indent_style = space

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_size = 2
indent_style = space

# Markdown files
[*.md]
trim_trailing_whitespace = false
